background-color: #fafafa;"> -->
<div>
<p style="color: green" align="center"><%= notice %></p>
  <table class="table table-striped table-hover">
    <thead>
      <tr align="center">
        <th scope="col">#ID</th>
        <th scope="col">Tile</th>
        <th scope="col">Body</th>
        <th scope="col">CommentsNumer</th>
        <th scope="col">ShowAction</th>
        <th scope="col">EditAction</th>
        <th scope="col">DestroyAction</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= render 'post_table_row', post: post %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New post", new_post_path %>
